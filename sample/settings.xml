<settings xmlns="http://maven.apache.org/SETTINGS/1.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0
                      http://maven.apache.org/xsd/settings-1.0.0.xsd">

	<pluginGroups>
		<pluginGroup>dev.galasa</pluginGroup>
	</pluginGroups>

    <servers>
        <server>
            <id>genapp</id>
            <username>admin</username>
            <password>galasaadmin</password>
        </server>
    </servers>

    <profiles>
        <profile>
			<id>genapp</id>
            <properties>
                <genapp.release.repo>http://localhost:8081/repository/maven</genapp.release.repo>
                <genapp.snapshot.repo>http://localhost:8081/repository/maven</genapp.snapshot.repo>
				<galasa.test.stream>genapp</galasa.test.stream>
				<galasa.bootstrap>http://localhost:8080/bootstrap</galasa.bootstrap>
            </properties>
			<repositories>
				<repository>
					<id>genapp.release.repo</id>
					<url>http://localhost:8081/repository/maven</url>
                    <releases>
                       <enabled>true</enabled>
                       <updatePolicy>always</updatePolicy>
                       <checksumPolicy>warn</checksumPolicy>
                    </releases>
                    <snapshots>
                       <enabled>false</enabled>
                    </snapshots>
				</repository>
				<repository>
					<id>genapp.snapshot.repo</id>
					<url>http://localhost:8081/repository/maven</url>
                    <releases>
                       <enabled>false</enabled>
                    </releases>
                    <snapshots>
                       <enabled>true</enabled>
                       <updatePolicy>always</updatePolicy>
                       <checksumPolicy>warn</checksumPolicy>
                    </snapshots>
				</repository>
			</repositories>
			<pluginRepositories>
				<pluginRepository>
					<id>genapp.release.repo</id>
					<url>http://localhost:8081/repository/maven</url>
                    <releases>
                       <enabled>true</enabled>
                       <updatePolicy>always</updatePolicy>
                       <checksumPolicy>warn</checksumPolicy>
                    </releases>
                    <snapshots>
                       <enabled>false</enabled>
                    </snapshots>
				</pluginRepository>
				<pluginRepository>
					<id>genapp.snapshot.repo</id>
					<url>http://localhost:8081/repository/maven</url>
                    <releases>
                       <enabled>false</enabled>
                       <updatePolicy>always</updatePolicy>
                       <checksumPolicy>warn</checksumPolicy>
                    </releases>
                    <snapshots>
                       <updatePolicy>always</updatePolicy>
                       <checksumPolicy>warn</checksumPolicy>
                       <enabled>true</enabled>
                    </snapshots>
				</pluginRepository>
			</pluginRepositories>
		</profile>
    </profiles>

</settings>